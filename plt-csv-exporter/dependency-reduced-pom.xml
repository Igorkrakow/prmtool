<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.igt.plt</groupId>
  <artifactId>ri-csv-exporter</artifactId>
  <version>1.0.0.0-SNAPSHOT</version>
  <scm>
    <connection>scm:git:ssh://git@xxgit1.gtech.com:interactive_sites/lot_plt_22_00.git</connection>
    <developerConnection>scm:git:git@xxgit1.gtech.com:interactive_sites/lot_plt_22_00.git</developerConnection>
    <url>scm:git:git@xxgit1.gtech.com:interactive_sites/lot_plt_22_00.git</url>
  </scm>
  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.igt.plt.PltCsvExporter</mainClass>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.handlers</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.schemas</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>nexus</id>
      <url>http://xxmaven/content/groups/public</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>nexus</id>
      <url>http://xxmaven/content/groups/public</url>
    </pluginRepository>
  </pluginRepositories>
  <distributionManagement>
    <repository>
      <id>pd-reference-release</id>
      <url>http://xxmaven/content/repositories/plt-pd-release/</url>
    </repository>
    <snapshotRepository>
      <id>pd-reference-snapshots</id>
      <url>http://xxmaven/content/repositories/plt-pd-snapshots/</url>
    </snapshotRepository>
    <site>
      <id>gtech-gga-reference-site</id>
      <url>dav://xxmaven/content/repositories/gtech-gga-reference-site/${project.version}</url>
    </site>
  </distributionManagement>
  <properties>
    <org.springframework.version>5.2.2.RELEASE</org.springframework.version>
    <maven-jar-plugin.version>3.0.2</maven-jar-plugin.version>
    <spring-batch-infrastructure.version>3.0.7.RELEASE</spring-batch-infrastructure.version>
    <player-direct-internal-api.groupId>com.gtech.pdapi</player-direct-internal-api.groupId>
    <maven.compiler.source>11</maven.compiler.source>
    <maven-shade-plugin.version>3.0.0</maven-shade-plugin.version>
    <plt-interactive-events-definition.version>2.6.6.3</plt-interactive-events-definition.version>
    <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
    <spring.version>5.2.2.RELEASE</spring.version>
    <fasterxml.jackson.version>2.13.3</fasterxml.jackson.version>
    <maven-assembly-plugin.version>3.0.0</maven-assembly-plugin.version>
    <spring-batch.version>3.0.7.RELEASE</spring-batch.version>
    <player-direct-internal-api.version>2.0.10.0</player-direct-internal-api.version>
    <commons-dbcp.version>1.4</commons-dbcp.version>
    <maven.compiler.target>11</maven.compiler.target>
    <maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
    <slf4j.version>1.7.25</slf4j.version>
    <db2jcc.version>4.25.13</db2jcc.version>
    <commons-lang3.version>3.8</commons-lang3.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <log4j.version>1.2.16</log4j.version>
    <commons-collections4.version>4.1</commons-collections4.version>
    <commons-io.version>2.4</commons-io.version>
  </properties>
</project>

